{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "env": {
        "es6": true,
        "node": true,
        "jest": true,
        "browser": true
    },
    "plugins": ["prettier", "react", "jsx-a11y"],
    "extends": ["eslint:recommended", "airbnb", "plugin:react/recommended", "prettier"],
    "rules": {
        "prettier/prettier": "error"
    }
}
